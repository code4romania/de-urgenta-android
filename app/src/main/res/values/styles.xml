<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Splashscreen">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TEXTS -->

    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <style name="Text.Dark">
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="Text.Heading">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>

    <style name="Text.Heading.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Text.Heading.Dark">
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="Text.SectionHeading">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">30sp</item>
        <item name="android:fontFamily">@font/titillium_web_semibold</item>
    </style>

    <style name="Text.Paragraph">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="Text.Paragraph.Bold">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>

    <style name="Text.MenuList">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:fontFamily">@font/titillium_web_semibold</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="TextAppearance.DeUrgenta.Headline6" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <style name="TextAppearance.DeUrgenta.Caption" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <style name="Widget.DeUrgenta.Button.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>

    <!-- BUTTONS -->

    <style name="Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/white</item>
        <item name="strokeWidth">0dp</item>
        <item name="fontFamily">@font/titillium_web_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
    </style>

    <style name="Button.InvertedColors">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Button.WhiteRed">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/md_red_200</item>
    </style>

    <style name="Button.Green">
        <item name="android:backgroundTint">@color/green_400</item>
    </style>

    <!-- FORM ELEMENTS -->

    <style name="Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:fontFamily">@font/titillium_web_semibold</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
    </style>

    <style name="Input.Label">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Input.Field">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/xsmall_margin</item>
    </style>

    <style name="Input_Layout">
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemTextAppearance">@style/Text.Paragraph.Bold</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemHorizontalPadding">@dimen/xbig_margin</item>
        <item name="itemIconPadding">@dimen/margin</item>
        <item name="itemPadding">@dimen/margin</item>
        <item name="itemIconSize">@dimen/small_icon_size</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MenuTextView" parent="Widget.AppCompat.TextView">
        <item name="itemTextAppearance">@style/Text.MenuList</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:paddingTop">@dimen/margin</item>
        <item name="android:paddingBottom">@dimen/margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/purple</item>
    </style>
</resources>
