<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Splashscreen">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Default">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Signup">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Heading">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.Heading.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Big">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Paragraph">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="Text.MenuList">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="Signup.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Signup.Button.Simple">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/white</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="NoCaps.Button.WhiteRed" parent="Signup.Button.Simple">
        <item name="android:backgroundTint">@color/md_red_200</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NoCaps.Button.Simple" parent="Signup.Button.Simple">
        <item name="textAllCaps">false</item>
    </style>

    <style name="NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemTextAppearance">@style/Text.Paragraph</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemHorizontalPadding">@dimen/xbig_margin</item>
        <item name="itemIconPadding">@dimen/margin</item>
        <item name="itemPadding">@dimen/margin</item>
        <item name="itemIconSize">@dimen/small_icon_size</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MenuTextView" parent="Widget.AppCompat.TextView">
        <item name="textAppearanceSubtitle1">@style/Text.MenuList</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:padding">@dimen/big_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Input"></style>

    <style name="Input.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Input.Field">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/xsmall_margin</item>
    </style>

    <style name="Input.Layout">
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/purple</item>
    </style>
</resources>
